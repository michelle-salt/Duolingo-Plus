{
  "name": "Duolingo Plus",
  "version": "1.0",
  "description": "Change website languages randomly",
  "manifest_version": 2,
  "permissions": ["*://*/*"],
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["languages.js", "main.js"], 
      "exclude_matches": [
        "https://www.google.com/*", 
        "https://www.bing.com/*",
        "https://duckduckgo.com/*",
        "https://ca.search.yahoo.com/*",
        "https://www.baidu.com/*",
        "https://yandex.ru/*"
    ]
    }
  ],
  "browser_action": {
    "default_icon": "icon.png"
  },
  "icons": {
    "128": "icon.png"
  }
}
